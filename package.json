{
  "name": "@fluent/chat-widget",
  "description": "A chat widget that seamlessly integrates with any website to capture and manage customer conversations through the Fluent CRM.",
  "version": "1.0.0",
  "author": {
    "name": "Danick Gevry",
    "url": "https://github.com/danickgevry"
  },
  "main": "dist/fluent-widget.js",
  "module": "dist/fluent-widget.esm.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist",
    "docs",
    "examples"
  ],
  "scripts": {
    "build": "nuxt build",
    "build:widget": "node scripts/build.js",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "test": "vitest",
    "test:e2e": "playwright test",
    "release": "node scripts/release.js",
    "docs:build": "nuxt generate",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "nuxt typecheck",
    "shadcn:add": "pnpm dlx shadcn-vue@latest add %COMPONENT%",
    "shadcn:add:mac": "pnpm dlx shadcn-vue@latest add $COMPONENT"
  },
  "keywords": [
    "chat",
    "widget",
    "customer-support",
    "conversation",
    "embed"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/monkeylab-io/fluent-chat-widget.git"
  },
  "bugs": {
    "url": "https://github.com/monkeylab-io/fluent-chat-widget/issues"
  },
  "homepage": "https://fluent.ai",
  "dependencies": {
    "@nuxt/eslint": "1.5.2",
    "@tailwindcss/vite": "^4.1.11",
    "@vueuse/core": "^13.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.525.0",
    "nuxt": "^3.17.6",
    "reka-ui": "^2.3.2",
    "shadcn-nuxt": "2.2.0",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.3.5",
    "vue": "^3.5.17",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@iconify-json/radix-icons": "^1.2.2",
    "@iconify/vue": "^5.0.0",
    "@nuxt/eslint-config": "^1.5.2",
    "@nuxtjs/color-mode": "^3.5.2",
    "@testing-library/vue": "^8.1.0",
    "eslint": "^9.30.1",
    "playwright": "^1.53.2",
    "vitest": "^3.2.4"
  }
}
